.container
  .row.center.activate-cod-header
    %h2 Chúc mừng bạn đã kích hoạt thành công
  - if @should_show_info
    .row.center.activate-cod-header
      %h4 Chúng tôi đã gửi email xác nhận tài khoản cho bạn
  .row
    .activate-cod-account.col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1.col-xs-12{}
      - if @should_show_info
        .row.account-info
          .row.info
            %b Thông tin tài khoản
          .row.info
            Email: #{@user.email}
          .row.info
            Password: 12345678
      .row.learn-now
        %a.btn-learning.btn.btn-primary.bold{:style => 'font-size:16px;', :type => 'submit', :href => "/courses/#{@course.alias_name}/learning"}
          Hoàn tất
  .row.hotline
    %span
      Chăm sóc khách hàng:
      %b 0961215368
