%header
  .header-inner
    .header-col
      .btn-group.cats-dropdown.cats-dropdown-fixed
        .dropdown-toggle.active-nav-1{"data-dropdown-container" => ".slider-sidebar-wrapper.slider-sidebar-fixed", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", "data-fixed" => "true"}
          %i.fa.fa-bars
      .btn-group.cats-dropdown.cats-dropdown-mobile
        .dropdown-toggle.active-nav-2{"data-dropdown-container" => ".slider-sidebar-wrapper.slider-sidebar-mobile", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", "data-fixed" => "false"}
          %i.fa.fa-bars
        = render :partial => "components/dropdown_menu_category"
      .search-box
        %form
          %input.form-control.search-input{:type => "text", :name => "q", :placeholder => ""}
          %button.btn-search{:type => "submit"}
            %i.fa.fa-search
      .btn-group.search-dropdown
        .dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
          %i.fa.fa-search
        .dropdown-menu
          .search-box
            %form
              %input.form-control.search-input{:type => "text", :name => "q", :placeholder => ""}
              %button.btn-search{:type => "submit"}
                %i.fa.fa-search
    .header-col
      .logo
        %a{:href => "/courses"}
          = image_tag "logo.png"
    .header-col.text-right
      - if !current_user
        %a.btn.btn-default.btn-flat{"data-toggle" => "modal", "data-target" => "#register-modal"}
          Đăng kí
          .ripple-wrapper
        %a.btn.btn-default.btn-flat{"data-toggle" => "modal", "data-target" => "#login-modal"}
          Đăng nhập
          .ripple-wrapper
        = render :partial => "devise/registrations/new"
        = render :partial => "devise/sessions/new"
      - else
        .btn-group.user-dropdown
          .dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
            = image_tag "https://graph.facebook.com/484092475082021/picture", :class => "user-avatar-small"
          .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuDivider"}
            .user-dropdown-header
              .user-dropdown-header-left
                = image_tag "https://graph.facebook.com/484092475082021/picture", :class => "user-avatar-medium"
              .user-dropdown-header-right
                %p.name Seahorse ES
                %a.link{:href => "#"}
                  %i.fa.fa-user
                %a.link{:href => "#"}
                  %i.fa.fa-pencil
                %a.link{:href => "#"}
                  %i.fa.fa-cog
            .user-dropdown-links
              %a.link{:href => "#"} Các khoá học của tôi
              %a.link{:href => "#"} Tin nhắn
              %a.link{:href => "#"} Ưa thích
              %a.link{:href => "#"} Hỗ trợ
              %a.link{:href => "#"} Lịch sử giao dịch
            .user-dropdown-logout
              %a.btn.btn-flat.btn-logout{:href => "#"}
                %i.fa.fa-power-off
                Đăng xuất
.slider-sidebar-wrapper.slider-sidebar-mobile
  = render :partial => "components/dropdown_menu_category"
.slider-sidebar-wrapper.slider-sidebar-fixed
  = render :partial => "components/dropdown_menu_category"
.container-wrapper{:style => "overflow: hidden;"}
  %main.home
    .container
      .row
        - @courses.to_a.each do |course_h|
          - if course_h.last.last.count >0
            .col-lg-10.col-lg-offset-1.col-md-12.col-sm-12.col-xs-12{:style => 'margin-top:10px;'}
              .category-title.pull-left= course_h.last.first
              .category-show-all.pull-right.visible-lg.visible-md
                %a.btn.btn-default.btn-sm.show-all{:href => "",:style => 'margin-right: 7px;background:white;text-transform:none'}
                  Xem tất cả&nbsp;
                  %i.fa.fa-plus-circle
              .clearfix
              .list-course-card.text-center
                - course_h.last.last.each do |course|
                  = render :partial => 'components/courses/course_card', :locals => {:course => course}
              .list-course-list
                - course_h.last.last.each do |course|
                  = render :partial => 'components/courses/list_card', :locals => {:course => course}
= render :partial => 'components/footer/index'   