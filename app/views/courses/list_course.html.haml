              %a{:href => '#featured-courses'} Nổi bật
            %li.tab
              %a{:href => '#all-courses'} Tất cả các khoá học
  .row.category-main
    %form#test-form{:action => '', :method => 'GET'}
      %input#page-index{:type => 'hidden', :name => 'page', :value => '1'}
