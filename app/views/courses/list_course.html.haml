        %ul.course-filters
          %li.course-filter
            %p.course-filter-title Chi phí
            %ul.course-filter-content
              %li.course-filter-item
                %input#price-free-filter.filled-in{:type => 'checkbox', :name => 'price', :value => 'free'}
                %label{:for => 'price-free-filter'} Miễn phí (23)
              %li.course-filter-item
                %input#price-nonfree-filter.filled-in{:type => 'checkbox', :name => 'price', :value => 'paid'}
                %label{:for => 'price-nonfree-filter'} Trả phí (233)
          %li.course-filter
