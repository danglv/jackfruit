              %label{:for => 'price-free-filter'} Miễn phí (23)
            %li.course-filter-item
              %input#price-nonfree-filter.filled-in{:type => 'checkbox'}
              %label{:for => 'price-nonfree-filter'} Trả phí (233)
        %li.course-filter
          %p.course-filter-title Trình độ
          %ul.course-filter-content
            %li.course-filter-item
              %input#level-all-filter.filled-in{:type => 'checkbox'}
              %label{:for => 'level-all-filter'} Mọi trình độ (23)
