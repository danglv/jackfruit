      = render :partial => "components/banner/banner"
    .layout-320
      .payment.payment-history
        .container
          .row.no-margin.purchase-history
            %h4.center-align
              %b Lịch sử thanh toán
          .row.no-margin.account-balance
            %h5.normal-text
              Số dư sau còn lại từ thẻ cào:
              = succeed "" do
                %b.warning-text 0 VNĐ
          .row.no-margin.center-align.pagination-row-1
            %ul.pagination.no-margin
              / %li
              /   %a{:href => "javascript:void(0)"} <
              %li.active
                %a{:href => "javascript:void(0)"} 1
              / %li
              /   %a{:href => "javascript:void(0)"} 2
              / %li
              /   %a{:href => "javascript:void(0)"} 3
              / %li
              /   %a{:href => "javascript:void(0)"} >
          .row.no-margin
            %table.table.table-striped.table-hover
              %thead
                %tr
                  %th.left-align Khóa học
                  %th.right-align Hóa đơn
              %tbody
                - @payments.each_with_index do |payment, index|
                  - course = @courses[index]
                  %tr
                  %td.normal-text.left-align
                    %a.link-text= "#{course.name}"
                  %td.normal-text.right-align
