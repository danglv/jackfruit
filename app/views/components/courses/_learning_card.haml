.learning-card
  %a{:href => '#'}
    .course-image.no-margin
      = image_tag 'course-image.png'
    .learning-card-content
      %span.ellipsis-2lines.course-title iOS7 Programming: Fast Start!
      %span.no-margin.ellipsis-1lines.course-author By ThanhNguyá»…n
      .progress
        .progress-bar.progress-completed{:style => "width: 50%;"}
        / &-completed {
        /   background-color: #17AA1C;
        / }
        / &-learning {
        /   background-color: #17AA1C;
        / }
        / &-begin {
        /   background-color: #BFBFBF;
        / }
      %span.learning-status.learning-text 50% completed
      / .completed-text {
      /   color: #BCBCBC;
      / }
      / .learning-text {
      /   color: #BCBCBC;
      / }
      / .begin-text {
      /   color: #EF8D2B;
      / }
      .rating-container
        %ul.rating.rating-active
          %li
            %i.fa.fa-star.star.rated{:val => "1"}
          %li
            %i.fa.fa-star.star.rated{:val => "2"}
          %li
            %i.fa.fa-star.star.rated{:val => "3"}
          %li
            %i.fa.fa-star.star.rated{:val => "4"}
          %li
            %i.fa.fa-star.star.rated{:val => "5"}
          %br
          %li{:style => "float:right"}
            %span.rate-it Rate it   
