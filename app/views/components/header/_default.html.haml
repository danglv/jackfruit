%header
  .header-inner
    .header-col
      .btn-group.cats-dropdown
        .dropdown-toggle.active-nav-2.active-nav-with-text{"data-dropdown-container" => ".slider-sidebar-wrapper.slider-sidebar-mobile", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", "data-fixed" => "false"}
          %i.fa.fa-bars
          %span.active-nav-text Danh sách khoá học
        = render :partial => "components/dropdown_menu_category"
      .search-box
        %form
          %input.form-control.search-input{:type => "text", :name => "q", :placeholder => ""}
          %button.btn-search{:type => "submit"}
            %i.fa.fa-search
      .btn-group.search-dropdown
        .dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
          %i.fa.fa-search
        .dropdown-menu
          .search-box
            %form
              %input.form-control.search-input{:type => "text", :name => "q", :placeholder => ""}
              %button.btn-search{:type => "submit"}
                %i.fa.fa-search
    .header-col
      .logo
        %a{:href => "/courses"}= image_tag "logo.png"
    .header-col.text-right
      - if !current_user
        %a.btn.btn-default.btn-flat{"data-toggle" => "modal", "data-target" => "#register-modal"}
          Đăng kí
          .ripple-wrapper
        %a.btn.btn-default.btn-flat{"data-toggle" => "modal", "data-target" => "#login-modal"}
          Đăng nhập
          .ripple-wrapper
        = render :partial => "devise/registrations/new"
        = render :partial => "devise/sessions/new"
      - else
        = render :partial => "components/user_dropdown"
  .slider-sidebar-wrapper.slider-sidebar-mobile
    = render :partial => "components/dropdown_menu_category"