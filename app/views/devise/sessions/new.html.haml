.visible-xs-block
  .row.no-margin
    .col-xs-12.no-padding
      .container
        %main.sign-in
          .row.no-margin.text-right
            .col-xs.12.no-padding
              %a.close-button.no-margin{:href => "#"} x
          .row.no-margin.text-center
            .col-xs-12.no-padding
              %h4.sign-in-header Đăng nhập
          .divider
          .row.sign-in-social.no-margin.text-center
            .col-xs-12.no-padding
              %h5.normal-text Đăng nhập với tài khoản mạng xã hội
            .col-xs-12.no-padding
              %a.btn.btn-info.btn-default.btn-lg.facebook-button 
                %i.fa.fa-facebook
                %span Đăng nhập bằng Facebook
            .col-xs-12.no-padding
              %a.btn.btn-warning.btn-default.btn-lg.google-button 
                %i.fa.fa-google-plus
                %span Đăng nhập bằng Google+
          .divider
          .row.no-margin.sign-in-email.text-center
            .col-xs-12.no-padding
              %h5.normal-text Đăng nhập bằng email
            .col-xs-12.no-padding
              %input.form-control{:placeholder => "Email", :type => "text"}
            .col-xs-12.no-padding
              %input.form-control{:placeholder => "Mật khẩu", :type => "text"}
          .row.no-margin
            .col-xs-12.no-padding
              %a.btn.btn-default.btn-success.btn-lg.login-button Đăng nhập
          .row.no-margin.text-center
            .col-xs-12.no-padding
              %a.link-text{:href => "#"}
                %h5{:style => "font-size: 16px; font-weight: 400"} Quên mật khẩu
          .divider
          .row.no-margin.register.text-center
            .col-xs-12.no-padding
              %h5.register-text
                Chưa có tài khoản?
                %a.link-text.modal-action.modal-close.modal-trigger{:href => '#modal-register'} Đăng ký
