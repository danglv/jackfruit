%header
  = render :partial => 'layouts/header'
  = render :partial => 'components/side_nav'

%main.payment
  .row
    .col.s12.no-padding
      = render :partial => 'payment/header_payment', :locals => {:price => @price}
      .container-1140
        = render 'payment_method', method: 'cod'
        .row.payment-content.active
          .col.s12
            %h4 2. Hoàn tất thanh toán
        .col.s12.no-padding 
          .row
            .col.s12
              .col.s12
                %span Điền thông tin đăng ký đặt mua khóa học
          .row
            %form{:method => "post",:action => "/home/payment/cod"}
              .col.s4
                .row
                  %input{:type => "hidden", :name => "alias_name", :placeholder => "Tên đầy đủ", :value => @course.alias_name}
                  %input{:type => "hidden", :name => "coupon_code", :value => @coupon_code}
                  .input-field
                    %input{:type => "text", :name => "name", :placeholder => "Tên đầy đủ", :required => "required", :pattern => ".{6,}"}/
                .row
                  .input-field
                    %input{:type => "number", :name => "mobile", :placeholder => "Số điện thoại", :required => "required"}/
                .row
                  %select.browser-default{:name => "city", :required => "required"}
                    %option{:disabled => "", :selected => "", :value => ""} Chọn Tỉnh / Thành phố
                    %option{:value => "Hà Nội"} Hà Nội
                    %option{:value => "Tp Hồ Chí Minh"} tp Hồ Chí Minh
                    %option{:value => "Đà Nẵng"} Đà Nẵng
                .row
                  = hidden_field_tag :authenticity_token, form_authenticity_token
                  %input.btn.btn-large.deep-orange.expanded{:type => 'submit', :value => 'Đặt mua khóa học'}
              .col.s4.offset-s1{:action => "#"}
                .row
                  .input-field
                    %input{:type => "email", :name => "email", :placeholder => "Email", :required => "required"}/
                .row
                  .input-field
                    %input{:type => "text", :name => "address", :placeholder => "Địa chỉ", :required => "required"}/
                .row
                  .input-field
                    %input{:type => "text", :name => "district", :placeholder => "Quận/huyện", :required => "required"}/