%header
  = render :partial => 'layouts/header'
  = render :partial => 'components/side_nav'

%main.payment
  .row
    .col.s12.no-padding
      .row.green.payment-header
        .col.s6
          %h4.white-text Xác nhận thanh toán
          %p.white-text= @course.name
        .col.s6
          %h4.right.white-text= @course.price
      .container-1140
        = render 'payment_method', method: 'delivery'
        .row.payment-content
          %h4 2. Hoàn tất thanh toán
        .col.s12.no-padding 
          .row{:style => "padding: 0 113px 0 113px"}
            %form.col.s12{:method => "post",:action => "/home/payment/delivery"}
              .row
                %span Điền thông tin đăng ký đặt mua khóa học
              .row
                .col.s4
                  .row
                    %input{:type => "hidden", :name => "course_id", :placeholder => "Tên đầy đủ", :value => @course._id}
                    %input{:type => "hidden", :name => "is_submitted", :placeholder => "Tên đầy đủ", :value => "true"}
                    .input-field
                      %input{:type => "text", :name => "name", :placeholder => "Tên đầy đủ"}/
                  .row
                    .input-field
                      %input{:type => "text", :name => "mobile", :placeholder => "Số điện thoại"}/
                  .row
                    %select.browser-default{:name => "city"}
                      %option{:disabled => "", :selected => "", :value => ""} Chọn Tỉnh / Thành phố
                      %option{:value => "Hà Nội"} Hà Nội
                      %option{:value => "Tp Hồ Chí Minh"} tp Hồ Chí Minh
                      %option{:value => "Đà Nẵng"} Đà Nẵng
                  .row
                    %input.btn.btn-large.deep-orange.expanded{:type => 'submit', :value => 'Đặt mua khóa học'}
                .col.s4.offset-s1{:action => "#"}
                  .row
                    .input-field
                      %input{:type => "text", :name => "email", :placeholder => "Email"}/
                  .row
                    .input-field
                      %input{:type => "text", :name => "address", :placeholder => "Địa chỉ"}/
                  .row
                    .input-field
                      %input{:type => "text", :name => "district", :placeholder => "Quận/huyện"}/