%header
  = render :partial => 'layouts/header'
  = render :partial => 'components/side_nav'

%main.payment
  .row
    .col.s12.no-padding
      .row.green.payment-header
        .col.s6
          %h4.white-text
            Xác nhận thanh toán
          %p.white-text
            Kỹ năng thuyết trình và nói trước công chúng
        .col.s6
          %h4.right.white-text
            300.000d
      .row.payment-content
        %p
          1. Lựa chọn hình thức thanh toán
      .row.payment-content
        .col.s12
          .row.courses.card-style.center-align
            .col.s3
              %a.payment-tab.course.active{:href => '/home/payment/delivery'}
                .card-image.course-image
                  %i.material-icons.large shopping_cart
                  %h6
                    Giao khóa học
                  %h6
                    và thu tiền tận nơi
            .col.s3
              %a.payment-tab.course{:href => '/home/payment/visa'}
                .card-image.course-image
                  %i.material-icons.large credit_card
                  %h6
                    Thanh toán trực tuyến
                  %h6
                    bằng thẻ ATM
                  %h6
                    hoặc Visa/Master
            .col.s3
              %a.payment-tab.course{:href => '/home/payment/bank'}
                .card-image.course-image
                  %i.material-icons.large business
                  %h6
                    Chuyển khoản
                  %h6
                    qua ngân hàng
            .col.s3
              %a.payment-tab.course{:href => '/home/payment/direct'}
                .card-image.course-image
                  %i.material-icons.large room
                  %h6
                    Thanh toán trực tiếp            
      .row.payment-content
        %p
          2. Hoàn tất thanh toán
        %p
          Bạn chưa lựa chọn hình thức thanh toán nào
      .col.s12.no-padding 
        .row{:style => "padding: 0 113px 0 113px"}
          %p
            Điền thông tin đăng ký đặt mua khóa học
          %form.col.s12{:method => "post",:action => "/home/payment/delivery"}
            .row
              .col.s4
                .row
                  .input-field
                    %input{:type => "text", :name => "name", :placeholder => "Tên đầy đủ"}/
                .row
                  .input-field
                    %input{:type => "text", :name => "mobile", :placeholder => "Số điện thoại"}/
                .row
                  %select.browser-default{:name => "city"}
                    %option{:disabled => "", :selected => "", :value => ""} Chọn Tỉnh / Thành phố
                    %option{:value => "Hà Nội"} Hà Nội
                    %option{:value => "tp Hồ Chí Minh"} tp Hồ Chí Minh
                    %option{:value => "Đà Nẵng"} Đà Nẵng
                .row
                  %input.btn.btn-large.deep-orange.expanded{:type => 'submit', :value => 'Đặt mua khóa học'}
              .col.s4.offset-s1{:action => "#"}
                .row
                  .input-field
                    %input{:type => "text", :name => "email", :placeholder => "Email"}/
                .row
                  .input-field
                    %input{:type => "text", :name => "address", :placeholder => "Địa chỉ"}/
                .row
                  %select.browser-default{:name => "district"}
                    %option{:disabled => "", :selected => "", :value => ""} Chọn Quận / Huyện
                    %option{:value => "Quận 1"} Quận 1
                    %option{:value => "Quận 2"} Quận 2
                    %option{:value => "Quận 3"} Quận 3     
