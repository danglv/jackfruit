%header
  = render :partial => 'layouts/header'
  = render :partial => 'components/side_nav'

%main.payment
  .row
    .col.s12.no-padding
      = render :partial => 'payment/header_payment'
      .container-1140
        = render 'payment_method', method: 'card'
        .row.payment-content.active
          .col.s12
            %h4 2. Hoàn tất thanh toán
        .col.s12.no-padding 
          .row
            .col.s12
              .col.s12
                %span Điền thông tin đăng ký đặt mua khóa học
          .row
            %form{:method => "post",:action => "/home/payment/card"}
              .col.s4
                %input{:type => "hidden", :name => "alias_name", :placeholder => "Tên đầy đủ", :value => @course.alias_name}
                %input{:type => "hidden", :name => "p", :placeholder => "baokim_card", :value => "baokim_card"}
                .row
                  %select.browser-default{:name => "card_id", :required => "required"}
                    %option{:disabled => "", :selected => "", :value => ""} Chọn loại thẻ cào
                    %option{:value => "MOBI"} Mobiphone
                    %option{:value => "VINA"} Vinaphone
                    %option{:value => "VIETEL"} Viettel
                    %option{:value => "GATE"} GATE
                    %option{:value => "VTC"} VTC
                .row
                  = hidden_field_tag :authenticity_token, form_authenticity_token
                  %input.btn.btn-large.deep-orange.expanded{:type => 'submit', :value => 'Đặt mua khóa học'}
              .col.s4.offset-s1{:action => "#"}
                .row
                  .input-field
                    %input{:type => "text", :name => "pin_field", :placeholder => "pin_field", :required => "required"}/
                .row
                  .input-field
                    %input{:type => "text", :name => "seri_field", :placeholder => "seri_field", :required => "required"}/