/ Màn hình từ 320px
.layout-320
  = render :partial => 'components/header/index'
  .container-wrapper{:style => "overflow: hidden;"}  
    %main.payment
      .row.no-margin
        .col-xs-12.col-sm-12.col-md-12.col-lg-12.no-padding
          = render :partial => 'payment/header_payment'
      .container
        = render 'payment_method', method: 'card'
        .row.payment-content.active.no-margin
          .col-xs-12.no-padding
            %h4 2. Hoàn tất thanh toán
        .row.no-margin
          .col-xs-12.no-padding
            %h5.no-margin Nạp tiền bằng thẻ cào điện thoại
        .row.card-purchase.no-margin
          .col-xs-12.no-padding
            - money = number_to_currency(current_user.money, :locale => 'vi', :unit => 'đ', :precision => 0, :delimiter => ",", :format => "%n%u")
            %span.normal-text= "Hiện tại trong ví của bạn đang có " + money + ", bạn hãy nạp thêm " 
            - money = number_to_currency(@course.price - current_user.money, :locale => 'vi', :unit => 'đ', :precision => 0, :delimiter => ",", :format => "%n%u")
            %span.normal-text.warning-text= money
            = succeed "" do
              %span.normal-text để thanh toán khóa học này
        .row.card-purchase-guild.no-margin
          .col-xs-12.no-padding
            %h5.normal-text Hướng dẫn nạp tiền bằng thẻ cào điện thoại, thẻ game:
          .col-xs-12.no-padding
            .row.no-margin
              %ul.nav.nav-pills
                %li
                  %span.badge 1
                  %span.normal-text Cào lớp tráng bạc để biết mã thẻ (Áp dụng cho Vinaphone, Viettel và Mobifone)
                %li
                  %span.badge 2
                  %span.normal-text Chọn loại thẻ & nhập mã thẻ cùng số seri rồi ấn nút “Nạp ngay”. Lưu ý viết liền không khoảng trắng hoặc dấu “-”
                %li
                  %span.badge 3
                  %span.normal-text Quay lại bước hai để nạp thẻ tiếp theo
        .row.phone-cards.no-margin
          .col-xs-6
            %a.phone-card{:href => "#"}
              = image_tag 'payment/mobifone'
          .col-xs-6
            %a.phone-card{:href => "#"}
              = image_tag 'payment/vinaphone'
          .col-xs-6
            %a.phone-card{:href => "#"}
              = image_tag 'payment/viettel'
          .col-xs-6
            %a.phone-card{:href => "#"}
              = image_tag 'payment/gate'
        .row.no-margin.card-input
          .col-xs-12.no-padding.code
            %input.form-control{:placeholder => "Mã số thẻ", :type => "text"}
          .col-xs-12.no-padding.seri
            %input.form-control{:placeholder => "Số seri", :type => "text"}
        .row.no-margin
          .col-xs-12.no-padding.payment-editor
            %a.btn.btn-success.btn-raised.btn-lg.purchase-button Đặt mua khóa học  
  = render :partial => 'components/footer/index'      
   
