!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}/
    = favicon_link_tag 'favicon.png'
    %title= help_get_title
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    = stylesheet_link_tag    'application', media: 'all'
%body
  %header
    .header-inner
      .header-col
        .btn-group.cats-dropdown.cats-dropdown-fixed
          .dropdown-toggle.active-nav{"data-dropdown-container" => ".slider-sidebar-wrapper", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", "data-fixed" => "true"}
            %i.fa.fa-bars
        .search-box
          %form
            %input.form-control.search-input{:type => "text", :name => "q", :placeholder => ""}
            %button.btn-search{:type => "submit"}
              %i.fa.fa-search
        .btn-group.search-dropdown
          .dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
            %i.fa.fa-search
          .dropdown-menu
            .search-box
              %form
                %input.form-control.search-input{:type => "text", :name => "q", :placeholder => ""}
                %button.btn-search{:type => "submit"}
                  %i.fa.fa-search
      .header-col
        .logo
          = image_tag "logo.png"
      .header-col.text-right
        .btn-group.user-dropdown
          .dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
            = image_tag "https://graph.facebook.com/484092475082021/picture", :class => "user-avatar-small"
          .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuDivider"}
            .user-dropdown-header
              .user-dropdown-header-left
                = image_tag "https://graph.facebook.com/484092475082021/picture", :class => "user-avatar-medium"
              .user-dropdown-header-right
                %p.name Seahorse ES
                %a.link{:href => "#"}
                  %i.fa.fa-user
                %a.link{:href => "#"}
                  %i.fa.fa-pencil
                %a.link{:href => "#"}
                  %i.fa.fa-cog
            .user-dropdown-links
              %a.link{:href => "#"} Các khoá học của tôi
              %a.link{:href => "#"} Tin nhắn
              %a.link{:href => "#"} Ưa thích
              %a.link{:href => "#"} Hỗ trợ
              %a.link{:href => "#"} Lịch sử giao dịch
            .user-dropdown-logout
              %a.btn.btn-flat.btn-logout{:href => "#"}
                %i.fa.fa-power-off
                Đăng xuất
  .slider-sidebar-wrapper.hidden-md.hidden-lg.hidden-xl
    %ul.dropdown-menu
      %li
        %a{:href => "#"} Regular link
      %li.disabled
        %a{:href => "#"} Disabled link
      %li
        %a{:href => "#"} Another link
  .slider-sidebar-wrapper.slider-sidebar-fixed
    %ul.dropdown-menu
      %li
        %a{:href => "#"} Regular link
      %li.disabled
        %a{:href => "#"} Disabled link
      %li
        %a{:href => "#"} Another link
  .container-wrapper{:style => "overflow: hidden;"}
    .container
      = yield

  = javascript_include_tag 'application'
  - if Rails.env == 'production'
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    - if current_user && current_user.id
      :javascript
        ga('create', 'UA-65260176-1', {'userId': "#{current_user.id}"});
        ga('send', 'pageview');
    - else
      :javascript
        ga('create', 'UA-65260176-1', 'auto');
        ga('send', 'pageview');
