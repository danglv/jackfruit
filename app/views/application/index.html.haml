              .dropdown-menu
                = render :partial => "components/search_box"
          .header-col
            .logo
              %a{:href => "/courses"}= image_tag "logo-360.png"
          .header-col.text-right
            - if !current_user
              / %a.btn.btn-default.btn-flat.hidden-xs.hidden-sm{"data-toggle" => "modal", "data-target" => "#register-modal", :style => "color: #fff"}
              /   Đăng kí
              /   .ripple-wrapper
              %a.btn.btn-default.btn-flat.button-header{"data-toggle" => "modal", "data-target" => "#login-modal", :style => "color: #fff"}
                Đăng nhập
                .ripple-wrapper
            - else
              = render :partial => "components/user_dropdown"
        .slider-sidebar-wrapper.slider-sidebar-mobile
          = render :partial => "components/dropdown_menu_category"
      .container-wrapper{:style => "overflow: hidden;"}
        .row.no-margin.landingpage
          .col-xs-12.col-ld-12.col-md-12.no-padding
            .row.no-margin.header-box
              .col-xs-12.col-sm-10.col-sm-offset-1.col-md-10.col-md-offset-1
                %h4.no-margin.header-title Khóa học nào sẽ thay đổi cuộc đời bạn?
              .col-xs-12.col-sm-10.col-sm-offset-1.col-md-10.col-md-offset-1
                %h5.header-description Làm chủ tương lai của bạn bằng cách học thêm các kỹ năng online
              .col-xs-12.col-sm-10.col-sm-offset-1.col-md-10.col-md-offset-1.search-landingpage
                = render :partial => "components/search_box"
            .container
              .row.no-margin.categories
                .layout-320
                  %h4.categories-title Khám phá những chủ đề 
                  %h4.categories-title và khóa học phổ biến
                .layout-480-up
                  %h4.categories-title Khám phá những chủ đề và khóa học phổ biến
                .category
                  %a{:href => "#"}= image_tag "topic-bg-python.png"
                .category
                  %a{:href => "#"}= image_tag "topic-bg-java.png"
                .category
                  %a{:href => "#"}= image_tag "topic-bg-excel.png"
              .row.no-margin.courses
                - if @courses
                  - @courses.each do |c|
                    .course
                      = render :partial => 'components/courses/landingpage_card', :locals => {:course => c}
              .row.no-margin.register
                .col-xs-12.col-sm-12.col-md-12.no-padding
                  %a.btn.btn-info.btn-raised.btn-lg.other-course-button{:href => "/courses", :style => "font-size: 16px"} Khám phá các khóa học khác
                .col-xs-12.col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3.no-padding
                  %h5.hook-1 Sẵn sàng để làm chủ những kỹ năng mới?
                .col-xs-12.col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3.no-padding
                  %h5.hook-2 Đưa sự nghiệp của bạn lên tầm cao mới!
                .col-xs-12.col-sm-12.col-md-12.no-padding
                  %a.btn.btn-success.btn-raised.btn-lg.register-button{"data-toggle" => "modal", "data-target" => "#register-modal"} Đăng ký ngay
      = render :partial => 'components/footer/index'
